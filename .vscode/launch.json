{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest Tests",
      "program": "${workspaceFolder}/packages/vscale/node_modules/jest/bin/jest",
      "args": [
        "--runInBand",
        "--config",
        "${workspaceFolder}/packages/vscale/jest.config.js",
        "__tests__/linear.test.ts"  // 替换为你的测试文件路径
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
